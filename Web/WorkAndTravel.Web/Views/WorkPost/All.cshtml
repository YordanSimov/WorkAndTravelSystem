@model WorkAndTravel.Web.ViewModels.WorkPosts.WorkPostsListViewModel
@{
    this.ViewData["Title"] = "All workposts page";
}

<div class="dropdown text-md-left text-center float-right">
    <button class="btn btn-lg btn-outline-dark mt-2 dropbtn">Filter <i class="fas fa-sort-down fa-lg"></i></button>
    <div class="dropdown-content">
        <a asp-controller="WorkPost" asp-action="SortByName" class="dropdown-item">Title Ascending</a>
        <a asp-controller="WorkPost" asp-action="SortByDate" class="dropdown-item">Lastly added</a>
        <a asp-controller="WorkPost" asp-action="SortBySalary" class="dropdown-item">Payment</a>
    </div>
</div>
<h1>@this.ViewData["Title"]</h1>

<hr />
<div class="row">
    @foreach (var post in this.Model.WorkPosts)
    {
        <div class="card-deck card-columns media col-md-3">
            <div class="card">
                <img src="@post.RemoteImageUrl" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><a asp-action="ById" asp-route-id="@post.Id">@post.Title</a></h5>
                    <p class="card-text ">@post.Description.Substring(0, 35) ...</p>
                    <p class="card-text"><small class="text-muted">@post.CategoryName</small></p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />
