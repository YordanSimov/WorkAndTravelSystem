@using WorkAndTravel.Common
@model WorkAndTravel.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

@if (this.TempData.ContainsKey("Message"))
{
<div class="alert alert-warning alert-dismissible fade show">
    @this.TempData["Message"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>

    <form asp-controller="WorkPost" asp-action="Search" method="get">
        <input type="search" name="cityName" placeholder="Search by City.." class="form-control w-25" />
        <button type="submit" class="btn btn-primary mb-4">Search</button>
    </form>

    <div class="col-md-4 offset-md-4">
        <p>We provide work opportunities all over the EU: </p>
        <ul class="list-group">
            <li class="list-group-item">Work Posts: @Model.WorkPostsCount</li>
            <li class="list-group-item">Types of work: @Model.CategoriesCount </li>
            <li class="list-group-item">Countries: @Model.CountriesCount </li>
            <li class="list-group-item">Cities: @Model.CitiesCount</li>
        </ul>
    </div>
</div>
