@model WorkAndTravel.Web.ViewModels.Account.ProfileViewModel
@{
    this.ViewData["Title"] = "Profile page";
}

@if (this.User.Identity.IsAuthenticated)
{
    <a class="btn btn-primary mt-2 float-right" asp-area="Identity" asp-page="/Account/Manage/Index">Profile Settings</a>
    <a class="btn btn-primary mt-2 float-right mr-3" asp-area="" asp-action="MyPosts">My posts</a>
    <h1>@this.ViewData["Title"]</h1>
    <hr />
    <div>
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="text-center card-box">
                    <div class="member-card">
                        <ul>
                            <li class="thumb-xl member-thumb m-b-10 center-block">
                                <img src="@Model.ProfilePictureUrl" class="img-circle img-thumbnail img-fluid" alt="profile-image">
                            </li>

                            <li class="col-lg-12 mt-3 w-100">
                                <a asp-controller="Account" asp-action="Edit" class="btn btn-secondary ">Edit</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="text-center">
                    <strong class="text-black"> Created on: </strong><time datetime="@Model.CreatedOn.ToString("O")"></time>
                </div>
                <hr />
            </div>
            <div class="col-md-6 ml-5 mt-3">
                <div class="card">
                    <div class="card-header font-weight-bold text-center">User Details</div>
                    <div class="card-body">
                        <p><b>First Name:</b> @Model.FirstName <b class="ml-5">Last Name:</b> @Model.LastName</p>
                        <br />
                        <p><b>Username:</b> @Model.Username <b class="ml-3">Email:</b> @Model.Email</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

